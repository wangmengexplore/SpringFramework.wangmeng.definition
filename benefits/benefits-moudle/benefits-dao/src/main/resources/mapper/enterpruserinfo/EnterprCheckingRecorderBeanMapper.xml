<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.benefits.mapper.enterpruserinfo.EnterprCheckingRecorderMapper">
  <resultMap id="checkingRecorderBean" type="com.lx.benefits.bean.vo.enterpr.EnterpriseCheckingBean">
    <id column="enterpr_id" jdbcType="BIGINT" property="enterprId" />
    <result column="enterpr_name" jdbcType="VARCHAR" property="enterprName" />
    <result column="sub_enterpr_name" jdbcType="VARCHAR" property="subEnterprName" />
    <result column="enterpr_identity_id" jdbcType="VARCHAR" property="enterprIdentityId" />
    <result column="enterpr_register_address" jdbcType="VARCHAR" property="enterprRegisterAddress" />
    <result column="certify_image_url" jdbcType="VARCHAR" property="certifyImageUrl" />
    <result column="country" jdbcType="VARCHAR" property="country" />
    <result column="province" jdbcType="VARCHAR" property="province" />
    <result column="city" jdbcType="VARCHAR" property="city" />
    <result column="county" jdbcType="VARCHAR" property="county" />
    <result column="street" jdbcType="VARCHAR" property="street" />
    <result column="address" jdbcType="VARCHAR" property="address" />
    <result column="leave_credit" jdbcType="INTEGER" property="leaveCredit" />
    <result column="contact_user" jdbcType="VARCHAR" property="contactUser" />
    <result column="mobile" jdbcType="VARCHAR" property="mobile" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="add_user" jdbcType="VARCHAR" property="addUser" />
    <result column="add_time" jdbcType="TIMESTAMP" property="addTime" />
    <result column="agent_id" jdbcType="INTEGER" property="agentId" />
    <result column="check_user" jdbcType="VARCHAR" property="checkUser" />
    <result column="check_time" jdbcType="TIMESTAMP" property="checkTime" />
    <result column="check_status" jdbcType="INTEGER" property="checkStatus" />
    <result column="contract_number" jdbcType="VARCHAR" property="contractNumber" />
    <result column="login_name" jdbcType="VARCHAR" property="loginName" />
    <result column="check_remark" jdbcType="VARCHAR" property="checkRemark" />
    <result column="registered_type" jdbcType="VARCHAR" property="registeredType" />
    <result column="deleted" jdbcType="INTEGER" property="deleted" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>
    <select id="selectWithAgentName"  resultMap="checkingRecorderBean">
    	SELECT recorder.* , agent.agent_name AS agentName
    	FROM enterpr_checking_recorder recorder LEFT JOIN agent_account_info agent
    	ON recorder.agent_id=agent.id
    	<where>
    		<if test="checked!=null and checked==0">
    			and recorder.check_status=1
    		</if>
    		<if test="checked!=null and checked!=0">
    			and recorder.check_status!=1
    		</if>
    		<if test="enterprName!=null">
    			and recorder.enterpr_name like concat('%',#{enterprName},'%')
    		</if>
    		<if test="checkStatus!=null">
    			and recorder.check_status=#{checkStatus}
    		</if>
    	</where>
    	order by recorder.check_time desc, recorder.enterpr_id desc
    	<if test="pageBean!=null">
    		limit #{pageBean.offset},#{pageBean.pageSize}
    	</if>
	</select>
</mapper>