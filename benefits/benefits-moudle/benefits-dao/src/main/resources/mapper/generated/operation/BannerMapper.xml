<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.benefits.mapper.operation.BannerMapper">
    <resultMap type="com.lx.benefits.bean.entity.operation.BannerEntity" id="BannerResult">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="description" column="description" />
        <result property="picAddress" column="pic_address" />
        <result property="topicId" column="topic_id" />
        <result property="sort" column="sort" />
        <result property="status" column="status" />
        <result property="createdUser" column="created_user" />
        <result property="createdTime" column="created_time" />
        <result property="updateUser" column="update_user" />
        <result property="updatedTime" column="updated_time" />
    </resultMap>
	
	<sql id="selectBannerVo">
        select id, name, description, pic_address, topic_id, sort, status, created_user, created_time, update_user, updated_time from banner
    </sql>

    <sql id="Example_Where_Clause">
        <where>
            <if test="id != null "> and id = #{id}</if>
            <if test="name != null  and name != '' "> and name like concat('%',#{name},'%')</if>
            <if test="description != null  and description != '' "> and description = #{description}</if>
            <if test="picAddress != null  and picAddress != '' "> and pic_address = #{picAddress}</if>
            <if test="topicId != null "> and topic_id = #{topicId}</if>
            <if test="sort != null "> and sort = #{sort}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createdUser != null  and createdUser != '' "> and created_user = #{createdUser}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updateUser != null  and updateUser != '' "> and update_user = #{updateUser}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
        </where>
    </sql>
	
    <select id="selectList" parameterType="com.lx.benefits.bean.entity.operation.BannerEntity" resultMap="BannerResult">
        <include refid="selectBannerVo"/>
        <include refid="Example_Where_Clause"/>
    </select>
    
    <select id="selectById" parameterType="Integer" resultMap="BannerResult">
        <include refid="selectBannerVo"/>
        where id = #{id}
    </select>
        
    <insert id="insert" parameterType="com.lx.benefits.bean.entity.operation.BannerEntity" useGeneratedKeys="true" keyProperty="id">
        insert into banner
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null  and name != ''  ">name,</if>
			<if test="description != null  and description != ''  ">description,</if>
			<if test="picAddress != null  and picAddress != ''  ">pic_address,</if>
			<if test="topicId != null  ">topic_id,</if>
			<if test="sort != null  ">sort,</if>
			<if test="status != null  ">status,</if>
			<if test="createdUser != null  and createdUser != ''  ">created_user,</if>
			<if test="createdTime != null  ">created_time,</if>
			<if test="updateUser != null  and updateUser != ''  ">update_user,</if>
			<if test="updatedTime != null  ">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name != null  and name != ''  ">#{name},</if>
			<if test="description != null  and description != ''  ">#{description},</if>
			<if test="picAddress != null  and picAddress != ''  ">#{picAddress},</if>
			<if test="topicId != null  ">#{topicId},</if>
			<if test="sort != null  ">#{sort},</if>
			<if test="status != null  ">#{status},</if>
			<if test="createdUser != null  and createdUser != ''  ">#{createdUser},</if>
			<if test="createdTime != null  ">#{createdTime},</if>
			<if test="updateUser != null  and updateUser != ''  ">#{updateUser},</if>
			<if test="updatedTime != null  ">#{updatedTime},</if>
         </trim>
    </insert>
	 
    <update id="update" parameterType="com.lx.benefits.bean.entity.operation.BannerEntity">
        update banner
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null  and name != ''  ">name = #{name},</if>
            <if test="description != null  and description != ''  ">description = #{description},</if>
            <if test="picAddress != null  and picAddress != ''  ">pic_address = #{picAddress},</if>
            <if test="topicId != null  ">topic_id = #{topicId},</if>
            <if test="sort != null  ">sort = #{sort},</if>
            <if test="status != null  ">status = #{status},</if>
            <if test="createdUser != null  and createdUser != ''  ">created_user = #{createdUser},</if>
            <if test="createdTime != null  ">created_time = #{createdTime},</if>
            <if test="updateUser != null  and updateUser != ''  ">update_user = #{updateUser},</if>
            <if test="updatedTime != null  ">updated_time = #{updatedTime},</if>
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteById" parameterType="Integer">
        delete from banner where id = #{id}
    </delete>
	
    <delete id="deleteByIds" parameterType="String">
        delete from banner where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="queryByParam" parameterType="com.lx.benefits.bean.entity.operation.BannerEntity" resultMap="BannerResult">
        <include refid="selectBannerVo"/>
        <include refid="Example_Where_Clause" />
    </select>

    <select id="selectCount" parameterType="com.lx.benefits.bean.entity.operation.BannerEntity" resultType="java.lang.Integer">
        select count(*) from banner
        <include refid="Example_Where_Clause" />
    </select>

    <select id="selectPageList" parameterType="com.lx.benefits.bean.entity.operation.BannerEntity" resultMap="BannerResult">
        <include refid="selectBannerVo"/>
        <include refid="Example_Where_Clause" />
        <if test="orderByClause != null">
            order by ${orderByClause}
        </if>
        <if test="start != null and limit != null">
            LIMIT #{start}, #{limit}
        </if>
    </select>
    
</mapper>