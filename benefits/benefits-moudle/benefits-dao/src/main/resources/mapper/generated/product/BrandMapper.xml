<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.benefits.mapper.product.BrandMapper">
    <resultMap type="com.lx.benefits.bean.entity.product.BrandEntity" id="BrandResult">
        <result property="id"    column="id"/>
        <result property="name"    column="name"/>
        <result property="nameEn"    column="name_en"/>
        <result property="shortName"    column="short_name"/>
        <result property="website"    column="website"/>
        <result property="logoAddress"    column="logo_address"/>
        <result property="headAddress"    column="head_address"/>
        <result property="description"    column="description"/>
        <result property="isHost"    column="is_host"/>
        <result property="status"    column="status"/>
        <result property="createdUser"    column="created_user"/>
        <result property="createdTime"    column="created_time"/>
        <result property="updateUser"    column="update_user"/>
        <result property="updatedTime"    column="updated_time"/>
    </resultMap>
	
	<sql id="selectBrandVo">
        select id, name, name_en, short_name, website, logo_address, head_address, description, is_host, status, created_user, created_time, update_user, updated_time from brand
    </sql>

    <sql id="Example_Where_Clause">
        <where>
            <if test="id != null "> and id = #{id}</if>
            <if test="name != null  and name != '' "> and name = #{name}</if>
            <if test="nameEn != null  and nameEn != '' "> and name_en = #{nameEn}</if>
            <if test="shortName != null  and shortName != '' "> and short_name = #{shortName}</if>
            <if test="website != null  and website != '' "> and website = #{website}</if>
            <if test="logoAddress != null  and logoAddress != '' "> and logo_address = #{logoAddress}</if>
            <if test="headAddress != null  and headAddress != '' "> and head_address = #{headAddress}</if>
            <if test="description != null  and description != '' "> and description = #{description}</if>
            <if test="isHost != null "> and is_host = #{isHost}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createdUser != null  and createdUser != '' "> and created_user = #{createdUser}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updateUser != null  and updateUser != '' "> and update_user = #{updateUser}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
            <if test="brandIdNotIn != null ">
                and p.brand_id not in
                <foreach item="item" collection="brandIdNotIn" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
        </where>
    </sql>
	
    <select id="selectBrandList" parameterType="com.lx.benefits.bean.entity.product.BrandEntity" resultMap="BrandResult">
        <include refid="selectBrandVo"/>
        <include refid="Example_Where_Clause" />
        order BY created_time desc
    </select>
    
    <select id="selectBrandById" parameterType="Long" resultMap="BrandResult">
        <include refid="selectBrandVo"/>
        where id = #{id}
    </select>

    <select id="selectByName" parameterType="String" resultMap="BrandResult">
        <include refid="selectBrandVo"/>
        where name = #{name}
    </select>



    <select id="queryByParam" parameterType="com.lx.benefits.bean.entity.product.BrandEntity" resultMap="BrandResult">
        <include refid="selectBrandVo"/>
        <include refid="Example_Where_Clause" />
    </select>

        
    <insert id="insertBrand" parameterType="com.lx.benefits.bean.entity.product.BrandEntity" useGeneratedKeys="true" keyProperty="id">
        insert into brand
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null  and name != ''  ">name,</if>
			<if test="nameEn != null  and nameEn != ''  ">name_en,</if>
			<if test="shortName != null  and shortName != ''  ">short_name,</if>
			<if test="website != null  and website != ''  ">website,</if>
			<if test="logoAddress != null  and logoAddress != ''  ">logo_address,</if>
			<if test="headAddress != null  and headAddress != ''  ">head_address,</if>
			<if test="description != null  and description != ''  ">description,</if>
			<if test="isHost != null  ">is_host,</if>
			<if test="status != null  ">status,</if>
			<if test="createdUser != null  and createdUser != ''  ">created_user,</if>
			<if test="createdTime != null  ">created_time,</if>
			<if test="updateUser != null  and updateUser != ''  ">update_user,</if>
			<if test="updatedTime != null  ">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name != null  and name != ''  ">#{name},</if>
			<if test="nameEn != null  and nameEn != ''  ">#{nameEn},</if>
			<if test="shortName != null  and shortName != ''  ">#{shortName},</if>
			<if test="website != null  and website != ''  ">#{website},</if>
			<if test="logoAddress != null  and logoAddress != ''  ">#{logoAddress},</if>
			<if test="headAddress != null  and headAddress != ''  ">#{headAddress},</if>
			<if test="description != null  and description != ''  ">#{description},</if>
			<if test="isHost != null  ">#{isHost},</if>
			<if test="status != null  ">#{status},</if>
			<if test="createdUser != null  and createdUser != ''  ">#{createdUser},</if>
			<if test="createdTime != null  ">#{createdTime},</if>
			<if test="updateUser != null  and updateUser != ''  ">#{updateUser},</if>
			<if test="updatedTime != null  ">#{updatedTime},</if>
         </trim>
    </insert>
	 
    <update id="updateBrand" parameterType="com.lx.benefits.bean.entity.product.BrandEntity">
        update brand
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null  and name != ''  ">name = #{name},</if>
            <if test="nameEn != null  and nameEn != ''  ">name_en = #{nameEn},</if>
            <if test="shortName != null  and shortName != ''  ">short_name = #{shortName},</if>
            <if test="website != null  and website != ''  ">website = #{website},</if>
            <if test="logoAddress != null  and logoAddress != ''  ">logo_address = #{logoAddress},</if>
            <if test="headAddress != null  and headAddress != ''  ">head_address = #{headAddress},</if>
            <if test="description != null  and description != ''  ">description = #{description},</if>
            <if test="isHost != null  ">is_host = #{isHost},</if>
            <if test="status != null  ">status = #{status},</if>
            <if test="createdUser != null  and createdUser != ''  ">created_user = #{createdUser},</if>
            <if test="createdTime != null  ">created_time = #{createdTime},</if>
            <if test="updateUser != null  and updateUser != ''  ">update_user = #{updateUser},</if>
            <if test="updatedTime != null  ">updated_time = #{updatedTime},</if>
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteBrandById" parameterType="Integer">
        delete from brand where id = #{id}
    </delete>
	
    <delete id="deleteBrandByIds" parameterType="String">
        delete from brand where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


    <select id="selectCount" parameterType="com.lx.benefits.bean.entity.product.BrandEntity" resultType="java.lang.Integer">
        select count(*) from brand
        <include refid="Example_Where_Clause" />

    </select>

    <select id="selectPageList" parameterType="com.lx.benefits.bean.entity.product.BrandEntity" resultMap="BrandResult">
        <include refid="selectBrandVo"/>
        <include refid="Example_Where_Clause" />
        order by created_time desc
        <if test="start != null and limit != null">
            LIMIT #{start}, #{limit}
        </if>
    </select>
	<select id="countWithName" resultType="java.lang.Integer">
		select count(*) from brand
		<if test="name!=null">
			where name like concat('%', #{name}, '%')
		</if>
	</select>
	<select id="selectWithName" resultMap="BrandResult">
		select id, name, name_en, short_name, website, logo_address, head_address, description, is_host
		from brand
		<if test="name!=null">
			where name like concat('%', #{name}, '%')
		</if>
		<if test="pageBean!=null">
			limit #{pageBean.offset},#{pageBean.pageSize} 
		</if>
	</select>
	
	<select id="getNameByIds" resultMap="BrandResult">
	    select  id, name from brand  where id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
	</select>

</mapper>