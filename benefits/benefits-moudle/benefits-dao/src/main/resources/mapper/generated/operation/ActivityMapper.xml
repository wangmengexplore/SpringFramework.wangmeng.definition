<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.benefits.mapper.operation.ActivityMapper">
    <resultMap type="com.lx.benefits.bean.entity.operation.ActivityEntity" id="ActivityResult">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="imgUrl" column="img_url" />
        <result property="startTime" column="start_time" />
        <result property="endTime" column="end_time" />
        <result property="jumpUrl" column="jump_url" />
        <result property="status" column="status" />
        <result property="createdUser" column="created_user" />
        <result property="createdTime" column="created_time" />
        <result property="updateUser" column="update_user" />
        <result property="updatedTime" column="updated_time" />
        <result property="sortNum" column="sort_num" />
    </resultMap>
	
	<sql id="selectActivityVo">
        select id, name, img_url, start_time, end_time, jump_url, status, created_user, created_time, update_user, updated_time,sort_num from activity
    </sql>

    <sql id="Example_Where_Clause">
        <where>
            <if test="id != null "> and id = #{id}</if>
            <if test="name != null  and name != '' "> and name = #{name}</if>
            <if test="imgUrl != null  and imgUrl != '' "> and img_url = #{imgUrl}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="jumpUrl != null  and jumpUrl != '' "> and jump_url = #{jumpUrl}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createdUser != null  and createdUser != '' "> and created_user = #{createdUser}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updateUser != null  and updateUser != '' "> and update_user = #{updateUser}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
            <if test="sortNum != null "> and sort_num = #{sortNum}</if>
        </where>
    </sql>
	
    <select id="selectList" parameterType="com.lx.benefits.bean.entity.operation.ActivityEntity" resultMap="ActivityResult">
        <include refid="selectActivityVo"/>
        <include refid="Example_Where_Clause"/>
    </select>
    
    <select id="selectById" parameterType="Integer" resultMap="ActivityResult">
        <include refid="selectActivityVo"/>
        where id = #{id}
    </select>
        
    <insert id="insert" parameterType="com.lx.benefits.bean.entity.operation.ActivityEntity" useGeneratedKeys="true" keyProperty="id">
        insert into activity
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null  and name != ''  ">name,</if>
			<if test="imgUrl != null  and imgUrl != ''  ">img_url,</if>
			<if test="startTime != null  ">start_time,</if>
			<if test="endTime != null  ">end_time,</if>
			<if test="jumpUrl != null  and jumpUrl != ''  ">jump_url,</if>
			<if test="status != null  ">status,</if>
			<if test="createdUser != null  and createdUser != ''  ">created_user,</if>
			<if test="createdTime != null  ">created_time,</if>
			<if test="updateUser != null  and updateUser != ''  ">update_user,</if>
			<if test="updatedTime != null  ">updated_time,</if>
            <if test="sortNum != null  ">sort_num,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name != null  and name != ''  ">#{name},</if>
			<if test="imgUrl != null  and imgUrl != ''  ">#{imgUrl},</if>
			<if test="startTime != null  ">#{startTime},</if>
			<if test="endTime != null  ">#{endTime},</if>
			<if test="jumpUrl != null  and jumpUrl != ''  ">#{jumpUrl},</if>
			<if test="status != null  ">#{status},</if>
			<if test="createdUser != null  and createdUser != ''  ">#{createdUser},</if>
			<if test="createdTime != null  ">#{createdTime},</if>
			<if test="updateUser != null  and updateUser != ''  ">#{updateUser},</if>
			<if test="updatedTime != null  ">#{updatedTime},</if>
            <if test="sortNum != null  ">#{sortNum},</if>
         </trim>
    </insert>
	 
    <update id="update" parameterType="com.lx.benefits.bean.entity.operation.ActivityEntity">
        update activity
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null  and name != ''  ">name = #{name},</if>
            <if test="imgUrl != null  and imgUrl != ''  ">img_url = #{imgUrl},</if>
            <if test="startTime != null  ">start_time = #{startTime},</if>
            <if test="endTime != null  ">end_time = #{endTime},</if>
            <if test="jumpUrl != null  and jumpUrl != ''  ">jump_url = #{jumpUrl},</if>
            <if test="status != null  ">status = #{status},</if>
            <if test="createdUser != null  and createdUser != ''  ">created_user = #{createdUser},</if>
            <if test="createdTime != null  ">created_time = #{createdTime},</if>
            <if test="updateUser != null  and updateUser != ''  ">update_user = #{updateUser},</if>
            <if test="updatedTime != null  ">updated_time = #{updatedTime},</if>
            <if test="sortNum != null  ">sort_num = #{sortNum},</if>
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteById" parameterType="Integer">
        delete from activity where id = #{id}
    </delete>
	
    <delete id="deleteByIds" parameterType="String">
        delete from activity where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="queryByParam" parameterType="com.lx.benefits.bean.entity.operation.ActivityEntity" resultMap="ActivityResult">
        <include refid="selectActivityVo"/>
        <include refid="Example_Where_Clause" />
    </select>

    <select id="selectCount" parameterType="com.lx.benefits.bean.entity.operation.ActivityEntity" resultType="java.lang.Integer">
        select count(*) from activity
        <include refid="Example_Where_Clause" />
    </select>

    <select id="selectPageList" parameterType="com.lx.benefits.bean.entity.operation.ActivityEntity" resultMap="ActivityResult">
        <include refid="selectActivityVo"/>
        <include refid="Example_Where_Clause" />
        <if test="orderByClause != null">
            order by ${orderByClause}
        </if>
        <if test="start != null and limit != null">
            LIMIT #{start}, #{limit}
        </if>
    </select>
    
</mapper>