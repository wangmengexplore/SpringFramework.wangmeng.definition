<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.benefits.mapper.pay.PayAccountMapper">

	<resultMap id="BaseResultMap" type="com.lx.benefits.bean.entity.pay.PayAccount">
		<id property="id" column="ID" /><!--自增主键-->
		<result property="channel" column="CHANNEL" /><!--支付渠道：1：支付宝，2：微信-->
		<result property="payAccount" column="PAY_ACCOUNT" /><!--支付账号-->
		<result property="key" column="KEY" /><!---->
	</resultMap>

	<sql id="Base_Column_List">
            `ID` ,
            `CHANNEL` ,
            `PAY_ACCOUNT` ,
            `KEY` 
	</sql>
	
    <sql id="idCnd">
        <where>
            <if test="id!=null" >ID=#{id,jdbcType=INTEGER}</if>
            <if test="id==null">1=0</if>
        </where>
    </sql>
    
	<insert id="insert" parameterType="com.lx.benefits.bean.entity.pay.PayAccount" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO 
		pay_account
		(
		`ID`,
		`CHANNEL`,
		`PAY_ACCOUNT`,
		`KEY`
		) VALUES 
		(
		#{id,jdbcType=INTEGER},
		#{channel,jdbcType=TINYINT},
		#{payAccount,jdbcType=VARCHAR},
		#{key,jdbcType=VARCHAR}
		)
	</insert>
	
	<insert id="insertSelective" parameterType="com.lx.benefits.bean.entity.pay.PayAccount" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO 
		pay_account
		<trim prefix="(" suffix=")" suffixOverrides=",">
		<if test="id!=null" >`ID`,</if>
		<if test="channel!=null" >`CHANNEL`,</if>
		<if test="payAccount!=null" >`PAY_ACCOUNT`,</if>
		<if test="key!=null" >`KEY`</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="id!=null" >#{id,jdbcType=INTEGER},</if>
		<if test="channel!=null" >#{channel,jdbcType=TINYINT},</if>
		<if test="payAccount!=null" >#{payAccount,jdbcType=VARCHAR},</if>
		<if test="key!=null" >#{key,jdbcType=VARCHAR}</if>
		</trim>
	</insert>
	<delete id="deleteByPrimaryKey">
		DELETE FROM pay_account
		<include refid="idCnd" />
	</delete>
	
	<update id="updateByPrimaryKeySelective">
		UPDATE pay_account
		<set>
		<if test="id!=null" >`ID`=#{id,jdbcType=INTEGER},</if>
		<if test="channel!=null" >`CHANNEL`=#{channel,jdbcType=TINYINT},</if>
		<if test="payAccount!=null" >`PAY_ACCOUNT`=#{payAccount,jdbcType=VARCHAR},</if>
		<if test="key!=null" >`KEY`=#{key,jdbcType=VARCHAR}</if>
		</set>
		<include refid="idCnd" />
	</update>
	
	<select id="selectByPrimaryKey" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM 
			pay_account
		<include refid="idCnd" />
	</select>
	
	
	<sql id="where_clause">
    	<where>
			<if test="id!=null" >`ID`=#{id,jdbcType=INTEGER}   </if>
	        <if test="channel!=null" > AND `CHANNEL`=#{channel,jdbcType=TINYINT}</if>
	        <if test="payAccount!=null" > AND `PAY_ACCOUNT`=#{payAccount,jdbcType=VARCHAR}</if>
	        <if test="key!=null" > AND `KEY`=#{key,jdbcType=VARCHAR}</if>
    	</where>
    </sql>
    
	
</mapper>

