		<if test="id!=null" >#{id,jdbcType=BIGINT},</if>
		<if test="payOrderNumber!=null" >#{payOrderNumber,jdbcType=BIGINT},</if>
		<if test="payChannel!=null" >#{payChannel,jdbcType=TINYINT},</if>
		<if test="payMark!=null" >#{payMark,jdbcType=VARCHAR},</if>
		<if test="payTid!=null" >#{payTid,jdbcType=VARCHAR},</if>
		<if test="buyerId!=null" >#{buyerId,jdbcType=VARCHAR},</if>
		<if test="createTime!=null" >#{createTime,jdbcType=TIMESTAMP},</if>
		<if test="updateTime!=null" >#{updateTime,jdbcType=TIMESTAMP}</if>
		</trim>
	</insert>
	<delete id="deleteByPrimaryKey">
		DELETE FROM order_pay
		<include refid="idCnd" />
	</delete>
	
	<update id="updateByPrimaryKeySelective">
		UPDATE order_pay
		<set>
		<if test="id!=null" >`ID`=#{id,jdbcType=BIGINT},</if>
		<if test="payOrderNumber!=null" >`PAY_ORDER_NUMBER`=#{payOrderNumber,jdbcType=BIGINT},</if>
		<if test="payChannel!=null" >`PAY_CHANNEL`=#{payChannel,jdbcType=TINYINT},</if>
		<if test="payMark!=null" >`PAY_MARK`=#{payMark,jdbcType=VARCHAR},</if>
		<if test="payTid!=null" >`PAY_TID`=#{payTid,jdbcType=VARCHAR},</if>
		<if test="buyerId!=null" >`BUYER_ID`=#{buyerId,jdbcType=VARCHAR},</if>
		<if test="createTime!=null" >`CREATE_TIME`=#{createTime,jdbcType=TIMESTAMP},</if>
