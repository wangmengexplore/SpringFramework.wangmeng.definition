<mapper namespace="com.lx.benefits.mapper.order.OrderPayMapper">

	<resultMap id="BaseResultMap" type="com.lx.benefits.bean.entity.order.OrderPay">
		<id property="id" column="ID" /><!--id-->
		<result property="payOrderNumber" column="PAY_ORDER_NUMBER" /><!--支付级别订单号-->
		<result property="payChannel" column="PAY_CHANNEL" /><!--付款渠道；1：支付宝，2：微信-->
		<result property="payMark" column="PAY_MARK" /><!--平台支付标识号-->
		<result property="payTid" column="PAY_TID" /><!--外部回调标识号-->
		<result property="buyerId" column="BUYER_ID" /><!--第三方支付公司的用户id-->
