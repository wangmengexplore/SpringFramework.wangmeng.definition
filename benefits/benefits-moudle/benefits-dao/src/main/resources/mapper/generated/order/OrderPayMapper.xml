            `ID` ,
            `PAY_ORDER_NUMBER` ,
            `PAY_CHANNEL` ,
            `PAY_MARK` ,
            `PAY_TID` ,
            `BUYER_ID` ,
            `CREATE_TIME` ,
            `UPDATE_TIME` 
	</sql>
	
    <sql id="idCnd">
        <where>
            <if test="id!=null" >ID=#{id,jdbcType=BIGINT}</if>
            <if test="id==null">1=0</if>
        </where>
    </sql>
    
	<insert id="insert" parameterType="com.lx.benefits.bean.entity.order.OrderPay" keyProperty="id" useGeneratedKeys="true">
