    	<where>
			<if test="id!=null" >`ID`=#{id,jdbcType=BIGINT}   </if>
	        <if test="payOrderNumber!=null" > AND `PAY_ORDER_NUMBER`=#{payOrderNumber,jdbcType=BIGINT}</if>
	        <if test="payChannel!=null" > AND `PAY_CHANNEL`=#{payChannel,jdbcType=TINYINT}</if>
	        <if test="payMark!=null" > AND `PAY_MARK`=#{payMark,jdbcType=VARCHAR}</if>
	        <if test="payTid!=null" > AND `PAY_TID`=#{payTid,jdbcType=VARCHAR}</if>
	        <if test="buyerId!=null" > AND `BUYER_ID`=#{buyerId,jdbcType=VARCHAR}</if>
