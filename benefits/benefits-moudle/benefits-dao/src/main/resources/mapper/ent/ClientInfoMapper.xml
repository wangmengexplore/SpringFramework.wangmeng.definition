	<update id="updateById" parameterType="com.lx.benefits.bean.entity.ent.ClientInfo">
		update ent_client_info
		<trim prefix="SET" suffixOverrides=",">
			<if test="clientName != null  and clientName != ''  ">client_name = #{clientName},</if>
			<if test="clientId != null  and clientId != ''  ">client_id = #{clientId},</if>
			<if test="token != null  and token != ''  ">token = #{token},</if>
			<if test="expires != null  ">expires = #{expires},</if>
			<if test="expiresIn != null  ">expires_in = #{expiresIn},</if>
			<if test="orgCode != null  and orgCode != ''  ">org_code = #{orgCode},</if>
			<if test="clientExtra != null  and clientExtra != ''  ">client_extra = #{clientExtra},</if>
			<if test="url != null  and url != ''  ">url = #{url},</if>
			<if test="updateTime != null  ">update_time = #{updateTime},</if>
		</trim>
		where id = #{id}
	</update>
	
	<insert id="insert" parameterType="com.lx.benefits.bean.entity.ent.ClientInfo">
		insert into ent_client_info(client_name,org_code,client_id,client_secret,url,create_time,update_time)
		values (#{clientName,jdbcType=VARCHAR}, #{orgCode,jdbcType=VARCHAR}, #{clientId,jdbcType=VARCHAR}, 
		 #{clientSecret,jdbcType=VARCHAR}, #{url,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP}, 
		 #{updateTime,jdbcType=TIMESTAMP})
	</insert>
	
	<sql id="Condition_Where_Clause">
    <where>
      <foreach collection="oredCriteria" item="criteria" separator="or">
        <if test="criteria.valid">
          <trim prefix="(" prefixOverrides="and" suffix=")">
            <foreach collection="criteria.criteria" item="criterion">
              <choose>
                <when test="criterion.noValue">
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue">
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue">
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue">
                  and ${criterion.condition}
                  <foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
	
