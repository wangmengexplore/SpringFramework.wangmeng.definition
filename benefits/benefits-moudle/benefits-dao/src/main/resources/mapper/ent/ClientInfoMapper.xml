        limit ${offset}, ${limit}
      </if>
      <if test="offset == null">
        limit ${limit}
      </if>
    </if>
    
  </select>
   <select id="countByExample" parameterType="com.lx.benefits.bean.entity.ent.ClientInfoCondition" resultType="java.lang.Integer">
