		from ent_client_info
		<include refid="Example_Where_Clause"/>
	</select>


	<select id="queryByParam" parameterType="com.lx.benefits.bean.entity.ent.ClientInfo" resultMap="clientInfo">
		SELECT
		<include refid="columns"/>
		from ent_client_info
		<include refid="Example_Where_Clause"/>
	</select>

